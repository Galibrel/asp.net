@model SalesWebmvc.Models.ViewModels.SallerFormViewModel
@{
    ViewData["Title"] = "Edit";

}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Saller.Id"></input>
            <div class="Form-group">
                <label asp-for="Saller.Name" class="control-label"></label>
                <input asp-for="Saller.Name" class="form-control"></input>
                <span asp-validation-for="Saller.Name" class="text-danger"></span>
            </div>
            <div class="Form-group">
                <label asp-for="Saller.Email" class="control-label"></label>
                <input asp-for="Saller.Email" class="form-control"></input>
                <span asp-validation-for="Saller.Email" class="text-danger"></span>
            </div>
            <div class="Form-group">
                <label asp-for="Saller.birthDate" class="control-label"></label>
                <input asp-for="Saller.birthDate" class="form-control"></input>
                <span asp-validation-for="Saller.birthDate" class="text-danger"></span>
            </div>
            <div class="Form-group">
                <label asp-for="Saller.Salary" class="control-label"></label>
                <input asp-for="Saller.Salary" class="form-control"></input>
                <span asp-validation-for="Saller.Salary" class="text-danger"></span>
            </div>
            <div class="Form-group">
                <label asp-for="Saller.DepartmentId" class="control-label"></label>
                <select asp-for="Saller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id","Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>>

</hr>
